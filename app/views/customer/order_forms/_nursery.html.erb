<%= content_for :page_title, "Nursery Order Form" %>

<div class="form-group">
  <%= f.label :business_name, class: "col-sm-2" %>
  <div class="col-sm-8">
    <%= f.text_field :business_name, class: "form-control", validate: true %>
  </div>
</div>

<div class="form-group">
  <%= f.label :abn, class: "col-sm-2" %>
  <div class="col-sm-8">
    <%= f.text_field :abn, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :property_address, class: "col-sm-2" %>
  <div class="col-sm-8">
    <%= f.text_area :property_address, class: "form-control", rows: 3 %>
  </div>
</div>

<div class="form-group">
  <%= f.label :contact_person, class: "col-sm-2" %>
  <div class="col-sm-8">
    <%= f.text_field :officer_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :telephone, class: "col-sm-2" %>
  <div class="col-sm-3">
    <%= f.text_field :telephone, class: "form-control" %>
  </div>

  <%= f.label :mobile, class: "col-sm-2" %>
  <div class="col-sm-3">
    <%= f.text_field :mobile, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-2" %>
  <div class="col-sm-8">
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :pon, class: "col-sm-2" %>
  <div class="col-sm-8">
    <%= f.email_field :pon, class: "form-control" %>
  </div>
</div>


<div class="form-group">
  <%= f.label :comments, class: "col-sm-2" %>
  <div class="col-sm-8">
    <%= f.text_area :comments, class: "form-control", rows: 3 %>
  </div>
</div>



<hr>
<div class="col-sm-10">
  <%= render partial: "items", locals: {grams: true, nursery: true} %>
</div>


<div class="form-group">
  <div class="col-sm-10">
    <%= f.submit "Place Order", class: "btn btn-success pull-right" %>
  </div>
</div>




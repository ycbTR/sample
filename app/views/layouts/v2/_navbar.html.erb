          <% Cms::Site.first.pages.root.children.published.each do |page| %>
              <% if page.children.present? %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= page.label %>
                      <i class="fa fa-angle-down parent-symbol"></i></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to page.label, page.full_path %></li>
                      <% page.children.published.each do |cc| %>
                          <li><%= link_to cc.label, cc.full_path %></li>
                      <% end %>
                    </ul>
                  </li>
              <% else %>
                  <li><%= link_to page.label, page.full_path %></li>
              <% end %>
          <% end if Cms::Site.first.present? %>

          <%= render partial: "layouts/v2/#{(@current_user.role.downcase rescue "home")}/navbar" %>
        </ul>
        <!-- Links -->

      </div>
      <!-- /nav-collapse-->

    </div>
    <!-- /Container-->

  </div>
  <!-- /Main Navigation -->

</header>

<%= content_for :modal do %>
    <div class="modal fade" id="selectModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 id="select-modal-header"><%= order_form.type.demodulize %> Order Form
              <% if @current_user.admin? %>
                 <small> <%= link_to "(Edit)", edit_admin_order_form_path(order_form) %> </small>
              <% end %>
            </h4>
          </div>
          <div id="dynamic-content">
            <div id="select-modal-body" class="modal-body">
              <%= render partial: "shared/order_forms/#{order_form.type.demodulize.downcase}", locals: {order_form: order_form} %>
            </div>
            <div id="select-modal-footer" class="modal-footer">
              <%= link_to t(:close), "#", "data-dismiss" => "modal", :class => "btn", "aria-hidden" => true %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>

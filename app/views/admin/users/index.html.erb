<h1>Listing users</h1>

<table class="table">
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_object_url(user), remote: true %></td>
    <td><%= link_to 'Destroy', object_url(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_object_url,
              :class => 'btn btn-primary pull-right' %>
  <%= render partial: "shared/advanced_search", locals: {name: "email_cont", html_options: {placeholder: "Search..."}} %>
</div>


<table class="table">
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_object_url(user), remote: true %></td>
    <td><%= link_to 'Destroy', object_url(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

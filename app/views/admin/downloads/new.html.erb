<div class="page-header"><h1>Upload File</h1></div>

<%= form_for @download, url: admin_downloads_path, maultipart: true  do |f| %>

  <div class="form-group">
    <%= f.label :file_name, class: "col-sm-2" %>
    <div class="col-sm-3">
      <%= f.text_field :file_name, class: "form-control" %>
    </div>

    <%= f.label :comments, class: "col-sm-2" %>
    <div class="col-sm-3">
      <%= f.text_field :comments, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :file %>
    <%= f.file_field :file, class: 'form-control'%>
  </div>

  <%= f.submit 'Upload', class: 'btn btn-primary' %>
<% end %>
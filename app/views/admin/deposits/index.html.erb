<%- model_class = Deposit -%>

<div class="page-header">
  <h1>Field Data Sheets</h1>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_deposit_path,
              :class => 'btn btn-primary pull-right' %>
  <div class="clearfix"></div>
  <%= render partial: "shared/advanced_search" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:collector) %></th>
      <th><%= model_class.human_attribute_name(:lot_number_id) %></th>
      <th><%= model_class.human_attribute_name(:plant_id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:qty_bank) %></th>
      <th><%= model_class.human_attribute_name(:qty_consigned) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deposits.each do |deposit| %>
      <tr>
        <td><%= deposit.collector.full_name %></td>
        <td><%= deposit.lot_number_id %></td>
        <td><%= deposit.plant_id %></td>
        <td><%= format_date deposit.date %></td>
        <td><%= deposit.qty_bank %></td>
        <td><%= deposit.qty_consigned %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_deposit_path(deposit), :class => 'btn btn-mini btn-primary' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_deposit_path(deposit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @deposits %>

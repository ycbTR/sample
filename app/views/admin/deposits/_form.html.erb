<%= form_for [:admin, @deposit], :html => {:class => 'form-horizontal'} do |f| %>
    <div class="control-group">
      <%= f.label :collector_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :collector_id, Person::Collector.all.collect { |l| [l.full_name, l.id] } %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :lot_number_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :lot_number_id, LotNumber.all.collect { |l| [l.display, l.id] } %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :plant_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :plant_id, Plant.all.collect { |l| [l.common_name, l.id] } %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :date, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :date, :class => 'date_select', :order => [:day, :month, :year] %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :qty_bank, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :qty_bank, :class => 'number_field' %>
      </div>
    </div>
    <br>
    <div class="form-actions">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_deposits_path, :class => 'btn' %>
    </div>
<% end %>

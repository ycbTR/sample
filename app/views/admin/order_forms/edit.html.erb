<div class="col-lg-12">
  <%= form_for @order_form, url: admin_order_form_path, as: :order_form, html: {class: "form-horizontal"} do |f| %>
      <%= render partial: @order_form.type.demodulize.downcase, locals: {f: f} %>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit "Save", class: "btn btn-success pull-right", id: "action_button", disable_with: "Processing..." %>
        </div>
      </div>
  <% end %>
</div>

<%= form_for [:admin, @deposit_adjustment], validate: true, :html => {:class => 'form-horizontal'} do |f| %>

    <div class="modal-body">
      <div class="control-group">
        <%= f.label :deposit, "FDA", :class => 'control-label' %>
        <div class="controls">
          <%= f.select :deposit_id, Deposit.with_eager_load.all.collect { |d| ["#{d.display} - #{d.plant.botanical_name}", d.id] } %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :qty_bank, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :qty_bank %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :qty_consigned, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :qty_consigned %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :qty_onhold, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :qty_onhold %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :qty_allocated, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :qty_allocated %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :comment, "Comment", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :comment, rows: 4, cols: 30 %>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <%= link_to "Cancel", admin_deposit_adjustments_path, :class => "pull-left", :data => {:dismiss => 'modal'} %>
      <%= f.submit "Save", :class => 'btn btn-primary' %>
    </div>
<% end %>

<%= form_for [:admin, @deposit_adjustment], :html => {:class => 'form-horizontal'} do |f| %>

    <div class="control-group">
      <%= f.label :deposit, "FDA", :class => 'control-label' %>
      <div class="controls">
        <%= f.select :deposit_id, Deposit.all.collect {|d| [d.display, d.id]} %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :qty_bank, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :qty_bank %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :qty_consigned, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :qty_consigned %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :qty_onhold, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :qty_onhold %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :qty_allocated, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :qty_allocated %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :comment, "Comment", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :comment, rows: 4, cols: 30 %>
      </div>
    </div>

    <br>
    <div class="form-actions">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_deposit_adjustments_path, :class => 'btn' %>
    </div>
<% end %>

<%- model_class = Plant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:species) %>:</strong></dt>
  <dd><%= @plant.species %></dd>
  <dt><strong><%= model_class.human_attribute_name(:common_name) %>:</strong></dt>
  <dd><%= @plant.common_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price_paid) %>:</strong></dt>
  <dd><%= @plant.price_paid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price_charged) %>:</strong></dt>
  <dd><%= @plant.price_charged %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_plants_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_plant_path(@plant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_plant_path(@plant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

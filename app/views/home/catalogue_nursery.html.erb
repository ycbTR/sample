<%= content_for :page_title, "Nursery Catalogue" %>
<%= content_for :page_link do %>
    <%= link_to "Place an order", "#selectModal", "data-toggle" => "modal", class: "btn btn-success" %>
<% end %>
<%= render partial: "shared/selection_modal" %>
<!-- /Row-->

<%= render partial: "table_header" %>

<table class="table table-bordered" id="table-1">
  <thead>
  <tr class="bold-black">
    <th>SEED CATALOGUE</th>
    <th colspan="5">SPA - Seed Production Area</th>
    <th class="align-right">g</th>
    <th>1-49g</th>
    <th>50-499g</th>
    <th> >500</th>
  </tr>

  <tr class="bold-black">
    <th>Lot No</th>
    <th>Spa Name</th>
    <th>Botanical Name</th>
    <th>Common Name</th>
    <th>Provenance</th>
    <th>Region</th>
    <th>Qty</th>
    <th>$/kg</th>
    <th>$/kg</th>
    <th>$/kg</th>
  </tr>
  </thead>

  <tbody>
  <% @deposits.all.each do |deposit| %>
      <tr>
        <td><%= deposit.display %></td>
        <td><%= (deposit.lot_number.spa_name.blank? ? "NA" : deposit.lot_number.spa_name) %></td>
        <td><%= deposit.plant.species %></td>
        <td><%= deposit.plant.common_name %></td>
        <td><%= deposit.lot_number.provenance %></td>
        <td><%= deposit.lot_number.region %></td>
        <td><%= [deposit.qty_bank.to_i, 0].max %></td>
        <td><%= number_to_currency deposit.plant.level_1_price %></td>
        <td><%= number_to_currency deposit.plant.level_2_price %></td>
        <td><%= number_to_currency deposit.plant.level_3_price %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<table class="table table-striped col-md-12" id="header-fixed"></table>



<%= content_for :page_title, "General Catalogue" %>
<%= content_for :page_link do %>
    <%= link_to "New Order", "#selectModal", "data-toggle" => "modal", class: "btn btn-success" %>
<% end %>
<%= render partial: "shared/selection_modal" %>
<!-- /Row-->

<%= render partial: "table_header" %>

<table class="table table-bordered">
  <thead>
  <tr class="bold-black">
    <th colspan="2">SEED CATALOGUE</th>
    <th>SPA - Seed Production Area</th>
    <th></th>
    <th class="align-right">g</th>
    <th>1-49g</th>
    <th>50-499g</th>
    <th> >500</th>
  </tr>

  <tr class="bold-black">
    <th>Lot No</th>
    <th>Botanical Name</th>
    <th>Common Name</th>
    <th>Provenance</th>
    <th>Qty</th>
    <th>$/kg</th>
    <th>$/kg</th>
    <th>$/kg</th>
  </tr>
  </thead>

  <tbody>
  <% @deposits.all.each do |deposit| %>
      <tr>
        <td><%= deposit.display %></td>
        <td><%= deposit.plant.species %></td>
        <td><%= deposit.plant.common_name %></td>
        <td><%= deposit.lot_number.provenance %></td>
        <td><%= deposit.qty_bank %></td>
        <td><%= number_to_currency deposit.plant.level_1_price %></td>
        <td><%= number_to_currency deposit.plant.level_2_price %></td>
        <td><%= number_to_currency deposit.plant.level_3_price %></td>
      </tr>
  <% end %>
  </tbody>
</table>

